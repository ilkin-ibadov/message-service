# App
PORT=3000
NODE_ENV=development
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Postgres
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=social_auth

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Mongo
MONGO_URI=mongodb://mongo:27017/auth_logs

# JWT
JWT_ACCESS_TOKEN_SECRET=supersecretaccesskey
JWT_REFRESH_TOKEN_SECRET=supersecretrefreshkey
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_EXPIRATION=7d

# Mail (AWS SES or SMTP fallback)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# SMTP fallback
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=example@example.com
MAIL_PASS=examplepassword
MAIL_FROM=no-reply@yourapp.com

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=auth-service

# Rate limiting (per IP / per email)
RATE_LIMIT_LOGIN_WINDOW=600
RATE_LIMIT_LOGIN_MAX=5

# Other
SALT_ROUNDS=12
